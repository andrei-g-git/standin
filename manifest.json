{
    "manifest_version": 2, 
    "name": "Standin",
    "version": "0.2.1",
    "description": "Open pages from sites like Youtube or Twitter with alternative frontends like Piped or Nitter!",
    "icons": {
        "128": "build/assets/logo128.png",
        "48": "build/assets/logo48.png",
        "16": "build/assets/logo16.png"
    },
    "web_accessible_resources": [
        "build/assets/options-gear-teal-256.png",
        "build/assets/youtubeStandin.png",
        "build/assets/twitterStandin.png",
        "build/assets/redditStandin.png",
        "build/assets/mediumStandin.png",
        "build/assets/tiktokStandin.png",
        "build/assets/imgurStandin.png"
    ],
    "browser_action": {
        "default_icon": "build/assets/logo16.png",
        "default_popup": "build/popup.html"
    },
    "options_ui": {
        "page": "build/options.html"
    },
    "background": {
        "scripts": [
            "build/js/context.js",
            "build/js/domains.js"
        ],
        "persistent": false
    },
    "permissions": [
        "contextMenus",
        "activeTab",
        "storage"
    ]
}